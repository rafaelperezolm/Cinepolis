<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rafaelperezolm.cinepolis">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.MyApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Cinepolis">
        <activity
            android:name=".ui.movies.MovieDetailActivity"
            android:label="MovieDetail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Cinepolis.TranspStatus"/>
        <activity
            android:name=".ui.login.LoginEmailActivity"
            android:label="LoginEmail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Cinepolis.NoActionBar" />
        <activity
            android:name=".ui.construction.UnderConstructionActivity"
            android:label="UnderConstruction"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Cinepolis.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="Main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Cinepolis" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Cinepolis.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Cinepolis.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>