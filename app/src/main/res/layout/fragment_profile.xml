<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/profile_imv_background"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:contentDescription="@string/app_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_imv_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_image_description"
        android:src="@drawable/ic_account_circle"
        app:layout_constraintBottom_toBottomOf="@+id/profile_imv_background"
        app:layout_constraintEnd_toEndOf="@+id/profile_imv_background"
        app:layout_constraintStart_toStartOf="@+id/profile_imv_background"
        app:layout_constraintTop_toTopOf="@+id/profile_imv_background" />

    <ProgressBar
        android:id="@+id/profile_pgb_loading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_imv_background" />

    <TextView
        android:id="@+id/profile_txv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_pgb_loading" />

    <TextView
        android:id="@+id/profile_txv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorSubText"
        app:layout_constraintEnd_toEndOf="@+id/profile_txv_name"
        app:layout_constraintStart_toStartOf="@+id/profile_txv_name"
        app:layout_constraintTop_toBottomOf="@+id/profile_txv_name" />

    <TextView
        android:id="@+id/profile_txv_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_txv_email"
        app:layout_constraintStart_toStartOf="@+id/profile_txv_email"
        app:layout_constraintTop_toBottomOf="@+id/profile_txv_email" />

</androidx.constraintlayout.widget.ConstraintLayout>