<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Cinepolis" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        //toolbar back arrow color
        <item name="android:textColorSecondary">@color/white</item>
        //toolbar title color
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Cinepolis.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        //toolbar back arrow color
        <item name="android:textColorSecondary">@color/white</item>
        //toolbar title color
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Cinepolis.TranspStatus" parent="Theme.Cinepolis.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Application theme for splash -->
    <style name="Theme.Cinepolis.Splash" parent="@style/Theme.Cinepolis.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
    </style>

</resources>